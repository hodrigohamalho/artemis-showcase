apiVersion: grafana.integreatly.org/v1beta1
kind: Grafana
metadata:
  name: integration-grafana
spec:
  config:
    auth:
      disable_login_form: 'false'
    log:
      level: info
      mode: console
    security:
      admin_password: admin
      admin_user: admin
  dashboardLabelSelector:
    - matchExpressions:
        - key: app
          operator: In
          values:
            - grafana
  ingress:
    enabled: true
