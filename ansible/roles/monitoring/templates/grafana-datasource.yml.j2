kind: GrafanaDatasource
apiVersion: grafana.integreatly.org/v1beta1
metadata:
  name: prometheus-grafanadatasource
spec:
  datasource:
    jsonData:
      httpHeaderName1: 'Authorization'
      timeInterval: 5s
      tlsSkipVerify: true
    secureJsonData:
        httpHeaderValue1: 'Bearer sha256~0ADqbldaWjuILn9Ab17WhhFaHbXtnVtVX1CrMp-jklI'
    access: proxy
    isDefault: true
    name: prometheus
    type: prometheus
    url: 'https://thanos-querier.openshift-monitoring.svc.cluster.local:9091'
  instanceSelector:
    matchLabels:
      dashboards: grafana-a
  plugins:
    - name: grafana-clock-panel
      version: 1.3.0
  resyncPeriod: 5m