apiVersion: broker.amq.io/v1beta1
kind: ActiveMQArtemis
metadata:
  name: '{{ artemis_cluster }}'
spec:
  acceptors:
  - anycastPrefix: jms.queue.
    multicastPrefix: /topic/
    name: acceptor
    port: 5672
    protocols: amqp,openwire
  - anycastPrefix: jms.queue.
    multicastPrefix: /topic/
    name: mirror
    port: 5673
    protocols: amqp
  addressSettings: {}
  adminPassword: admin
  adminUser: admin
  console:
    expose: true
    sslEnabled: false
  deploymentPlan:
    enableMetricsPlugin: true
    jolokiaAgentEnabled: true
    managementRBACEnabled: false 
    clustered: true
    extraMounts: {}
    image: placeholder
    journalType: nio
    livenessProbe: {}
    messageMigration: true
    persistenceEnabled: true
    podSecurity: {}
    readinessProbe: {}
    requireLogin: true
    size: 1
    storage:
      size: 2Gi
  upgrades:
    enabled: false
    minor: false
  extraMounts:
    secrets:
    - "custom-jaas-config"
  brokerProperties:
  - securityRoles.#.readers.send=false
  - securityRoles.#.readers.consume=true
  - securityRoles.#.readers.createAddress=false
  - securityRoles.#.readers.createNonDurableQueue=false
  - securityRoles.#.readers.browse=true
  - securityRoles.#.writers.send=true
  - securityRoles.#.writers.consume=true
  - securityRoles.#.writers.createAddress=true
  - securityRoles.#.writers.createNonDurableQueue=true
  - securityRoles.#.writers.browse=true
