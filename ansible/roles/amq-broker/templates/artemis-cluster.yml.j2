apiVersion: broker.amq.io/v1beta1
kind: ActiveMQArtemis
metadata:
  name: artemis
spec:
  acceptors:
  - anycastPrefix: jms.queue.
    multicastPrefix: /topic/
    name: acceptor
    port: 5672
    protocols: amqp,openwire,core
    expose: true
    sslEnabled: true
    sslSecret: amq-poc-tls
    verifyHost: false
  addressSettings: {}
  adminPassword: admin
  adminUser: admin
  console:
    expose: true
    sslEnabled: false
  deploymentPlan:
    enableMetricsPlugin: true
    jolokiaAgentEnabled: true
    managementRBACEnabled: false 
    clustered: true
    extraMounts: {}
    image: placeholder
    journalType: nio
    livenessProbe: {}
    messageMigration: true
    persistenceEnabled: true
    podSecurity: {}
    readinessProbe: {}
    requireLogin: true
    size: 1
    storage:
      size: 2Gi
  upgrades:
    enabled: false
    minor: false
